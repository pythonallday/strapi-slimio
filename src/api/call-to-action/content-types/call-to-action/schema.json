{
  "kind": "collectionType",
  "collectionName": "call_to_actions",
  "info": {
    "singularName": "call-to-action",
    "pluralName": "call-to-actions",
    "displayName": "Call to Action",
    "description": "Reusable call-to-action components for articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "buttonText": {
      "type": "string",
      "required": true
    },
    "buttonLink": {
      "type": "string",
      "required": true
    },
    "buttonStyle": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "outline"],
      "default": "primary"
    },
    "backgroundColor": {
      "type": "enumeration",
      "enum": ["default", "light", "dark"],
      "default": "default"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "callToAction"
    }
  }
}

